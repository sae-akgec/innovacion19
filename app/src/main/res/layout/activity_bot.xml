<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.BotActivity">

    <ImageView
        android:id="@+id/bot_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bot_stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ewd" />

    <ImageView
        android:id="@+id/bot_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bot_stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ewd"/>

    <ImageView
        android:id="@+id/bot_stop"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/robot3"/>

    <ImageView
        android:id="@+id/bot_forward"
        android:layout_width="87dp"
        android:layout_height="109dp"
        android:layout_marginTop="206dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/bot_stop"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ewd" />

    <ImageView
        android:id="@+id/bot_back"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bot_stop"
        app:srcCompat="@drawable/ewd" />

</android.support.constraint.ConstraintLayout>